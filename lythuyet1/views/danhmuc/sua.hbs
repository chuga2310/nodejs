<div class="container">
  <div class="row">
    <div class="col-6">
      <form action="/danh-muc/save-sua/{{category._id}}" method="post" enctype="multipart/form-data">

        <div class="form-group">
          <label for="">Sửa danh mục</label>
          <input type="text" name="name" id="" class="form-control" placeholder="" required value="{{category.name}}" >
        </div>
        <div class="form-group">
          <label for="">Mô tả</label>
          <input type="text" name="desc" id="" class="form-control" placeholder="" required value="{{category.desc}}">
        </div>
        <div class="pull-right">
          <input type="submit" id="" class="btn btn-primary" placeholder="">
          <a href="/" class="btn btn-danger">Huỷ</a>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="plugins/jquery/jquery.min.js"></script>
