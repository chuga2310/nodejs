<div class="container">
  <div class="row">
    <div class="col-6">
      <form action="/san-pham/save-sua/{{_id}}" method="post" id="form" enctype="multipart/form-data">

        <div class="form-group">
          <label for="">Sửa sản phẩm</label>
          <input type="text" name="name" id="name" class="form-control" placeholder="" value="{{product.name}}" required>
        </div>
        <div class="form-group">
          <label for="">Giá</label>
          <input type="number" name="price" id="price" class="form-control" placeholder="" value="{{product.price}}">
        </div>
        <div class="form-group">
          <label for="">Giá trước khuyến mại</label>
          <input type="number" name="old_price" id="old-price" class="form-control" placeholder=""  value="{{product.old_price}}">
        </div>
        <div class="form-group">
          <label for="">Ảnh</label>
          <input type="file" name="image" id="" class="form-control" placeholder="" value="{{product.image}}" >
        </div>
        <div class="pull-right">
          <input type="button" onclick="onSubmit()" id="" class="btn btn-primary" placeholder="" value="Sửa">
          <a href="/" class="btn btn-danger">Huỷ</a>
        </div>
      </form>
    </div>
  </div>
</div>
<script src="plugins/jquery/jquery.min.js"></script>
<script>
  function onSubmit(){
    let price  = Number($("#price").val())
    let oldPrice = Number($("#old-price").val())
    if ($("#name").val() == '') {
      alert("Mời nhập tên sản phẩm")
    } else if(price > oldPrice){
      alert("Giá phải nhỏ hơn giá trc khuyến mại")
    }else{
     $("#form").submit()
    }
  }
</script>
